{
  "compilerOptions": {
    "outDir": "built",
    "rootDir": "src",
    "noEmitOnError": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "target": "es6",  //we need this, or we can not import. It tries to use require
    "moduleDetection": "force",
    "lib": ["DOM", "ES2016"],
    "esModuleInterop": true,
    "removeComments": false,
  },
  "include": ["src"],
  "exclude": []
}
